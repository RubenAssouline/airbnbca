<div class="row">
  <div class="col-md-5 col-md-offset-3 text-center">
    <h2>Modifier mon profil</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

        <div class="form-group">
         <%= f.text_field :fullname, autofocus: true, class: "form-control" ,placeolder: "Nom complet ( prÃ©nom + nom)" %>
        </div> 
    
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control" ,placeolder: "Adresse e-mail" %>
      </div>


      <div class="field">
        <%= f.password_field :password, autocomplete: "off" , class: "form-control" ,placeolder: "Nouveau mot de pass ( si vous souhaitez le changer)"  %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" ,placeolder: "Confirmation du mot de Pass"  %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" ,placeolder: "Mot de pass actuel pour confirmer tout changements"  %>
      </div>

      <div class="actions">
        <%= f.submit "Enregister", class: "btn btnn-primary" %>
      </div>
    <% end %>
  </div>
</div>